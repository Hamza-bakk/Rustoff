<div class="flex justify-center items-center min-h-screen">
  <div class="flex bg-gray-800 rounded-lg shadow-lg overflow-hidden mx-auto max-w-sm lg:max-w-4xl">
    <div class="hidden lg:block lg:w-1/2 relative bg-cover">
      <img src="<%= asset_path('image5.png') %>" alt="Dessin baleine et méduse dans le ciel derrière un chateau" class="object-cover w-full h-full">
    </div>
    
    <div class="w-full p-8 lg:w-1/2">
      <h2 class="text-2xl font-semibold text-white text-center">Connexion</h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="mt-4">
          <%= f.label :email, class: "block text-white text-sm font-bold mb-2" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "bg-gray-200 text-gray-700 focus:outline-none focus:shadow-outline border border-gray-300 rounded py-2 px-4 block w-full appearance-none" %>
        </div>

        <div class="mt-4">
          <%= f.label :password, class: "block text-white text-sm font-bold mb-2" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "bg-gray-200 text-gray-700 focus:outline-none focus:shadow-outline border border-gray-300 rounded py-2 px-4 block w-full appearance-none" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="mt-4">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, class: "text-sm text-white" %>
          </div>
        <% end %>

        <div class="flex justify-center mt-4">
          <%= f.submit 'Log in', class: 'bg-gradient-to-r from-purple-300 to-purple-600 text-black font-semibold px-7 py-3 rounded-lg border border-gray-600 hover:scale-105 duration-200 hover:text-black hover:border-gray-800 hover:from-purple-600 hover:to-purple-300' %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
