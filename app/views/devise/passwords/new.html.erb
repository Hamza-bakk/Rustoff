<div class="py-6 mt-36">
  <div class="flex bg-gray-800 rounded-lg shadow-lg overflow-hidden mx-auto max-w-sm lg:max-w-4xl">
    <div class="w-full p-8">
      <h2 class="text-2xl font-semibold text-white text-center">Forgot your password?</h2>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="mt-4">
          <%= f.label :email, class: "block text-white text-sm font-bold mb-2" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "bg-gray-200 text-gray-700 focus:outline-none focus:shadow-outline border border-gray-300 rounded py-2 px-4 block w-full appearance-none" %>
        </div>

        <div class="mt-8">
          <%= f.submit "Envoyer les instructions de rÃ©initialisation de mot de passe", class: "bg-purple-400 text-black font-bold py-2 px-4 w-full rounded hover:bg-purple-300" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
