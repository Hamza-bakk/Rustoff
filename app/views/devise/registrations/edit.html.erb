<div class="flex justify-center items-center h-screen">
  <div class="w-full max-w-md px-4">
    <div class="shadow-md rounded px-8 py-6 bg-gray-800">
      <h2 class="text-2xl text-white font-semibold text-center mb-4">Change your password</h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="mb-4">
          <%= f.label :password, "New password", class: "block text-white text-sm font-bold mb-2" %><br />
          <% if @minimum_password_length %>
            <em class="text-xs text-white mb-2">(<%= @minimum_password_length %> characters minimum)</em><br />
          <% end %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline transition duration-300 hover:border-blue-500" %>
        </div>

        <div class="mb-4">
          <%= f.label :password_confirmation, "Confirm new password", class: "block text-white text-sm font-bold mb-2" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline transition duration-300 hover:border-blue-500" %>
        </div>

        <div class="actions">
          <%= f.submit "Change my password", class: "bg-purple-400 hover:bg-purple-300 text-black font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
