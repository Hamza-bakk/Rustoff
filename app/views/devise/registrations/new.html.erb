<div class="py-6 mt-36">
  <div class="flex bg-gray-800 rounded-lg shadow-lg overflow-hidden mx-auto max-w-sm lg:max-w-4xl">
    <div class="hidden lg:block lg:w-1/2 bg-cover" style="background-image:url('/assets/image4.png')"></div>
    <div class="w-full p-8 lg:w-1/2">
      <h2 class="text-2xl font-semibold text-white text-center">Sign up</h2>
      
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="mt-4">
          <%= f.label :email, class: "block text-white text-sm font-bold mb-2" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "bg-gray-200 text-gray-700 focus:outline-none focus:shadow-outline border border-gray-300 rounded py-2 px-4 block w-full appearance-none" %>
        </div>

        <div class="mt-4">
          <%= f.label :password, class: "block text-white text-sm font-bold mb-2" %>
          <% if @minimum_password_length %>
            <em class="text-sm text-white">(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class: "bg-gray-200 text-gray-700 focus:outline-none focus:shadow-outline border border-gray-300 rounded py-2 px-4 block w-full appearance-none" %>
        </div>

        <div class="mt-4">
          <%= f.label :password_confirmation, class: "block text-white text-sm font-bold mb-2" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "bg-gray-200 text-gray-700 focus:outline-none focus:shadow-outline border border-gray-300 rounded py-2 px-4 block w-full appearance-none" %>
        </div>

        <div class="mt-8">
          <%= f.submit "Sign up", class: "bg-purple-400 text-black font-bold py-2 px-4 w-full rounded hover:bg-purple-300" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
