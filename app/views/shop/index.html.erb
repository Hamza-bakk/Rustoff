<div class="flex flex-wrap -mx-4 mt-12 mb-12 ml-12 mr-12">
  <% @items.each_slice(3) do |item_group| %>
    <div class="w-full md:w-1/3 px-4 mb-4">
      <% item_group.each do |item| %>
        <div class="rounded-lg shadow-md overflow-hidden mb-4 card-bg-custom-color">
          <%= image_tag item.image_url, alt: item.title, class: "w-full h-48 object-cover" %>
          <div class="p-4">
            <h2 class="text-lg font-semibold mb-2"><%= item.title %></h2>
            <p class="text-gray-700 mb-2"><%= item.description %></p>
            <p class="text-green-600 font-semibold">â‚¬<%= item.price %></p>
            <div class="mt-4">
              <%= link_to "Voir", item_path(item), class: "bg-custom-color hover:bg-gray-400 text-white font-semibold py-2 px-4 rounded-full" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>