<div class="flex flex-wrap -mx-6 mt-16 mb-8 ml-10 mr-10">
  <% @items.each_slice(1) do |item_group| %>
    <div class="w-full md:w-1/3 px-4 mb-4">
      <% item_group.each do |item| %>
        <div class="rounded-lg shadow-md text-center bg-gray-800 overflow-hidden mb-4">
          <%= image_tag item.image_url, alt: item.title, class: "w-full h-80 object-cover" %>
          <div class="p-4">
            <h2 class="text-lg text-white font-semibold mb-2"><%= item.title %></h2>
            <p class="text-white mb-2"><%= item.description %></p>
            <p class="text-green-600 font-semibold">â‚¬<%= item.price %></p>
            <div class="mt-4">
              <%= link_to "Voir", item_path(item), class: "bg-purple-400 hover:bg-purple-300 text-black font-semibold py-2 px-4 rounded-full" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
