<section class="w-1/2 bg-gray-800 p-6 rounded-lg shadow-lg mt-10 mb-10 h-108 mx-auto">
  <h2 class="text-white text-xl text-center font-semibold mb-4">Ã‰dition d'un Article</h2>
  <%= form_for(@item, url: item_path(@item), method: :patch) do |f| %>
    <div class="grid grid-cols-1 gap-4">
      <div class="relative bg-gray-400 rounded-lg overflow-hidden shadow-md">
        <img src="<%= @item.image_url %>" alt="<%= @item.alt %>" class="w-full h-32 object-cover object-center">
        <div class="px-4 py-3">
          <%= f.label :title, class: "text-black font-bold text-sm mb-2" %>
          <%= f.text_field :title, class: "w-full bg-gray-200 rounded-lg" %>

          <%= f.label :description, class: "text-black text-xs mt-3" %>
          <%= f.text_area :description, class: "w-full bg-gray-200 rounded-lg" %>

          <%= f.label :category, class: "text-black text-xs mt-3" %>
          <%= f.select :category, @categories.map { |c| [c, c] }, { selected: @item.category }, { class: "w-full bg-gray-200 rounded-lg" } %>

          <%= f.label :price, class: "text-black font-bold text-sm mt-3" %>
          <%= f.number_field :price, class: "w-full bg-gray-200 rounded-lg" %>
        </div>
      </div>
    </div>
    <div class="my-6"></div>
    
    <div class="text-center">
      <%= f.submit "Enregistrer les modifications", class: "bg-purple-400 hover:bg-purple-300 text-black font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
    </div>
  <% end %>
</section>
