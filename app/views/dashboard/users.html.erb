<div class="max-w-screen-xl p-6">
  <div class="flex">
    <!-- La barre latérale va ici -->
    <div class="w-1/4">
      <%= render 'layouts/dashboard' %>
    </div>

    <!-- Liste des utilisateurs dans un tableau à trois colonnes -->
    <div class="w-3/4">
      <div class="grid grid-cols-4 gap-5">
        <% @users.each do |user| %>
          <div class="bg-gray-800 shadow-md rounded-lg overflow-hidden">
            <div class="px-4 py-2">
              <p class="text-white"><%= user.email %></p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
